#!/usr/bin/env bash
set -e

DOTFILES="${DOTFILES:-$HOME/dotfiles}"
CLAUDE_CONFIG="$DOTFILES/config/claude"

mkdir -p "$CLAUDE_CONFIG"

if [ -f "$HOME/.claude/settings.json" ]; then
	echo "Copying ~/.claude/settings.json -> config/claude/settings.json"
	cp "$HOME/.claude/settings.json" "$CLAUDE_CONFIG/settings.json"
else
	echo "No ~/.claude/settings.json found"
	exit 1
fi
