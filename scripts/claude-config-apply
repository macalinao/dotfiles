#!/usr/bin/env bash
set -e

MARKETPLACES=(
  macalinao/claude-plugins
  ast-grep/claude-skill
  schpet/linear-cli
  Dammyjay93/interface-design
  qazi0/claude-plugins
)

for mp in "${MARKETPLACES[@]}"; do
  echo "Adding marketplace: $mp"
  claude-all plugin marketplace add "$mp" || echo "  (already added or failed, continuing)"
done

echo "Done."
