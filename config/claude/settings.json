{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(bun add:*)",
      "Bash(bun create:*)",
      "Bash(bun info:*)",
      "Bash(bun init:*)",
      "Bash(bun install:*)",
      "Bash(bun run build)",
      "Bash(bun run clean)",
      "Bash(bun run lint)",
      "Bash(bun run lint:*)",
      "Bash(bun run lint:fix)",
      "Bash(bun run test)",
      "Bash(bun run typecheck)",
      "Bash(bun run typecheck:*)",
      "Bash(bun test:*)",
      "Bash(bunx:*)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo run:*)",
      "Bash(git blame:*)",
      "Bash(git -C * blame:*)",
      "Bash(git cat-file:*)",
      "Bash(git -C * cat-file:*)",
      "Bash(git describe:*)",
      "Bash(git -C * describe:*)",
      "Bash(git diff:*)",
      "Bash(git -C * diff:*)",
      "Bash(git log:*)",
      "Bash(git -C * log:*)",
      "Bash(git ls-files:*)",
      "Bash(git -C * ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git -C * ls-tree:*)",
      "Bash(git rev-list:*)",
      "Bash(git -C * rev-list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git -C * rev-parse:*)",
      "Bash(git shortlog:*)",
      "Bash(git -C * shortlog:*)",
      "Bash(git show:*)",
      "Bash(git -C * show:*)",
      "Bash(git stash list:*)",
      "Bash(git -C * stash list:*)",
      "Bash(git status:*)",
      "Bash(git -C * status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh release view:*)",
      "Bash(gh search:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(ast-grep:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(claude:*)",
      "Bash(echo:*)",
      "Bash(nix search:*)",
      "WebSearch",
      "WebFetch(domain:devenv.sh)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_navigate",
      "mcp__plugin_context7_context7__query-docs",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__deepwiki__ask_question",
      "mcp__deepwiki__read_wiki_contents",
      "mcp__deepwiki__read_wiki_structure",
      "mcp__plugin_code-context_context7__query-docs",
      "mcp__plugin_code-context_context7__resolve-library-id",
      "mcp__plugin_code-context_deepwiki__ask_question",
      "mcp__plugin_code-context_deepwiki__read_wiki_contents",
      "mcp__plugin_code-context_deepwiki__read_wiki_structure",
      "mcp__plugin_deepwiki_deepwiki__ask_question",
      "mcp__plugin_deepwiki_deepwiki__read_wiki_contents",
      "mcp__plugin_deepwiki_deepwiki__read_wiki_structure",
      "mcp__plugin_figma_figma__get_design_context"
    ],
    "deny": []
  },
  "model": "opus",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_LSP_TOOL": "1"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notifykit cchook --sound Glass"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notifykit cchook --sound Funk"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "ast-grep@ast-grep-marketplace": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "gitlab@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "code-context@igm-claude-plugins": true,
    "igm@igm-claude-plugins": true,
    "notifykit@igm-claude-plugins": true,
    "linear-cli@linear-cli": true
  }
}
